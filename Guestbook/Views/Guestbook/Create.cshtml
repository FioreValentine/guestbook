@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <p>Пожалуйста, введите своё имя</p>
    @Html.TextBox("Name")
    <p>Напишите своё сообщение</p>
    @Html.TextArea("Message", new {rows=10,cols=40})
    <br /><br />
    <input type="submit" value="Добавить запись">
}
